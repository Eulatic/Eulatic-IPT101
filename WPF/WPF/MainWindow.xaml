<Window x:Class="WPF.PalayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Palay Information"
        Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="LightGreen">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Palay"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <TextBlock Text="Palay Variety:"/>
            <TextBox x:Name="txtVariety" Width="200" Margin="0,0,0,10"/>

            <TextBlock Text="Harvest Date:"/>
            <DatePicker x:Name="dpHarvestDate" Width="200" Margin="0,0,0,10"/>

            <TextBlock Text="Quantity (kg):"/>
            <TextBox x:Name="txtQuantity" Width="200" Margin="0,0,0,10"/>

            <TextBlock Text="Farmer Name:"/>
            <TextBox x:Name="txtFarmer" Width="200" Margin="0,0,0,20"/>

            <Button Content="Save"
                    Width="100"
                    Height="30"
                    Background="Green"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
